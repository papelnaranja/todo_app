<h3>Lista de tareas</h3>
<div class="row">
    <div class="col-md-6">
    <h5>Incompleto</h5>
        <%  @todos.each do |todo| %>
            <% if todo.completed == false %>
              <div class="well">
                <p><%= todo.description %> - <span class="red">Pendiente</span></p>
              </div>
            <% end %>
        <% end %>
    </div>
    <div class="col-md-6">
        <h5>Completado</h5>
        <%  @todos.each do |todo| %>
            <% if todo.completed == true %>
              <div class="well">
                <p><%= todo.description %> - <span style="green">Completado</span></p>
              </div>
            <% end %>
        <% end %>
    </div>

</div>